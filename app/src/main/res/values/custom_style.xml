<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Image view shape appearance overlay style-->
    <style name="imageview_shape_appearance_overlay_rounded_edges_20_percent" parent="">
        <item name="cornerSize">20%</item>
    </style>
    <style name="imageview_shape_appearance_overlay_rounded_edges_5_percent" parent="">
        <item name="cornerSize">5%</item>
    </style>
    <style name="imageview_shape_appearance_overlay_rounded_edges_50_percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
<!--    Customize color of navigation back arrow-->
    <style name="custom_toolbar_theme" >
        <item name="colorControlNormal">@color/black</item>
    </style>
    <!-- Style for Bottom sheet dialog -->
    <style name="custom_app_bottom_sheet_dialog_theme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="bottomSheetStyle">@style/app_bottom_sheet_modal_style</item>
    </style>

    <style name="app_bottom_sheet_modal_style"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_profile_edit_bottom_sheet_dialog</item>
    </style>
</resources>